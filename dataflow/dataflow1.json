{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_ADLS_employee",
						"type": "DatasetReference"
					},
					"name": "employeesource"
				},
				{
					"dataset": {
						"referenceName": "DS_ADLS_department",
						"type": "DatasetReference"
					},
					"name": "departmentsource"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "JoinOnDepartmentId"
				}
			],
			"scriptLines": [
				"source(output(",
				"          EmployeeID as string,",
				"          Name as string,",
				"          Age as string,",
				"          DepartmentID as string,",
				"          Salary as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> employeesource",
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> departmentsource",
				"employeesource, departmentsource join(ERROR_FUNCTION('') == ERROR_FUNCTION(''),",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> JoinOnDepartmentId"
			]
		}
	}
}